pink = #B35588

body
  color: black
  line-height: 1.5

strong
  color: pink
  font-weight: bold

// site meta
.brand
  background: white
  color: black
  font-size: 1.5em
  text-decoration: underline
  &:hover
    color: pink

.pagination
  border: none
  .page-number
    border: none
  .extend
    border: none

// archieve list styles
.posts-collapse .post-content
  .collection-year
    margin: 30px 0 10px 0

  .post-header
    color: black
    margin: 10px 2px 0

// post styles
.post-body
  text-align: left
  aside
    background: #F1F1EF
    padding: 10px 20px
    border-radius: 5px
    p
      padding: 0
      margin: 0


// copyright
.post-copyright
  ul
    border-left: solid 3px pink