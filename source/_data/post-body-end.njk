{%- if theme.pjax %}
  <div class="pjax">
{%- endif %}
{%- if page.related_posts and page.related_posts.length > 0 %}
  <div class="posts-related">
    <div class="animated">
      <div class="popular-posts-title">
        <i class="{{ theme.related_posts.icon }} fa-fw"></i>
        相关文章
      </div>
      <ul class="popular-posts">
      {%- for path in page.related_posts %}
        {%- set popular_post = site.posts.findOne({ path: path }) %}
        <li class="popular-posts-item">
          <a class="popular-posts-link" href="{{ url_for(popular_post.path) }}" rel="bookmark">
            {%- if popular_post.date %}
              <time class="popular-posts-time">{{ date(popular_post.date) }}</time>
            {%- endif %}
            <span class="popular-posts-title">{{ popular_post.title }}</span>
          </a>
        </li>
      {%- endfor %}
      </ul>
    </div>
  </div>
{%- endif %}
{%- if theme.pjax %}
  </div>
{%- endif %}

<script>
  function resizeIframe() {
    const obj = document.querySelector('.post-body iframe');
    obj.onload = () => {
      obj.style.height = obj.contentWindow.document.documentElement.scrollHeight + 'px';
      obj.setAttribute('scrolling', 'no');
    }
  }
  resizeIframe();
</script>